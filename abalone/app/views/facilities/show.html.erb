<section class="h-screen bg-background p-12">
  <div class="container lg:max-w-xl mx-auto bg-white py-6 px-8 rounded-md shadow-sm">
    <p id="notice"><%= notice %></p>
    <div class="flex justify-between items-start mb-4">
      <%= link_to facilities_path do %>
        <button class="text-primary-dark hover:text-primary font-bold py-2 rounded inline-flex items-center">
          <span><< Back</span>
        </button>
      <% end %>
      <%= link_to edit_facility_path(@facility) do %>
        <button class="bg-primary-dark hover:bg-primary text-white font-bold py-2 px-4 rounded inline-flex items-center">
          <span>Edit Facility</span>
        </button>
      <% end %>
    </div>
    <div>
      <h1 class="text-title3 mb-4">Facility</h1>
    </div>
    <div class="block">
        <div class="text-sm text-caption-light font-medium uppercase">Name</div>
        <%= @facility.name %>
        <div class="text-sm text-caption-light font-medium uppercase mt-2">Code</div>
        <%= @facility.code %>
      <div class="text-sm text-caption-light font-medium uppercase mt-2">Location</div>

      <table>
        <thead>
          <tr></tr>
          <tr></tr>
        </thead>

        <tbody>
          <% @facility.locations.each do |location| %>
            <tr>
              <td><%=  location.name  %></td>
              <td class="text-primary-dark px-4"><%= link_to 'Show', facility_location_path(@facility, location) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to new_facility_location_path(@facility) do %>
      <button class="text-primary-dark hover:text-primary font-medium py-2 rounded inline-flex items-center mb-4">
        + Add New Location
      </button>
    <% end %>
    </div>

  </div>
</section>
